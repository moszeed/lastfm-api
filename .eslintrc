{
  "extends": "standard",
   "env": {
      "browser": true,
      "es6": true,
      "node": true
  },
  "rules"  : {
    "semi": ["error", "always"],
    "key-spacing": [2, {
        "align": "colon" ,
        "beforeColon": false,
        "afterColon": true
    }],
    "indent": ["error", 4, {
      "SwitchCase": 1
    }]
  }
}